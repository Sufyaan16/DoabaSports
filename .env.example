# Database (required)
DATABASE_URL=your_database_url_here

# Stack Auth (required)
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_key
STACK_SECRET_SERVER_KEY=your_stack_secret_key

# Resend Email API (optional)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=orders@yourdomain.com

# Upstash Redis — Rate Limiting & Caching (optional)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Sentry Error Monitoring (optional)
SENTRY_DSN=https://your_key@o0.ingest.sentry.io/0
NEXT_PUBLIC_SENTRY_DSN=https://your_key@o0.ingest.sentry.io/0

# App URL — used for CSRF validation, SEO, sitemaps (optional, auto-detected in dev)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Cloudinary — Cloud image storage (required for admin image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
